generator client {
  provider = "prisma-client"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model CustomerReview {
  id            String       @id @default(uuid())
  shopName      String
  shopEmail     String
  customerName  String
  customerEmail String
  phoneNumber   String
  productName   String
  rating        Int
  reviewText    String
  createdAt     DateTime     @default(now())
  status        ReviewStatus @default(PENDING)
}

enum ReviewStatus {
  PENDING
  SENT
  FAILED
}